<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/guillotine_background"
    android:orientation="vertical">

    <LinearLayout
        style="@style/Toolbar">

        <ImageView
            android:id="@+id/guillotine_hamburger"
            style="@style/ImageView.Hamburger"
            android:src="@drawable/ic_menu" />
        
         <com.se.project.plugin.CanaroTextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text="DashBoard"
                android:textColor="#fff"
                android:textSize="@dimen/guillotine_item_text_size" />
    </LinearLayout>

    <View 
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#fff"/>
    
    <LinearLayout
        android:id="@+id/profile_group"
        style="@style/LinearLayout.GuillotineItem"
        android:layout_marginTop="@dimen/guillotine_medium_margin">

        <ImageView
            style="@style/ImageView.GuillotineItem"
            android:src="@drawable/ic_profile" />

        <com.se.project.plugin.CanaroTextView
            style="@style/TextView.GuillotineItem"
            android:text="Profile" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/schedule_group"
        style="@style/LinearLayout.GuillotineItem">

        <ImageView
            style="@style/ImageView.GuillotineItem"
            android:src="@drawable/ic_feed" />

        <com.se.project.plugin.CanaroTextView
            style="@style/TextView.GuillotineItem"
            android:text="Schedule" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/assign_group"
        style="@style/LinearLayout.GuillotineItem">

        <ImageView
            style="@style/ImageView.GuillotineItem"
            android:src="@drawable/ic_feed" />

        <com.se.project.plugin.CanaroTextView
            style="@style/TextView.GuillotineItem"
            android:text="Assignment" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/grades_group"
        style="@style/LinearLayout.GuillotineItem">

        <ImageView
            style="@style/ImageView.GuillotineItem"
            android:src="@drawable/ic_feed" />

        <com.se.project.plugin.CanaroTextView
            style="@style/TextView.GuillotineItem"
            android:text="Grades" />
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/folder_group"
        style="@style/LinearLayout.GuillotineItem">

        <ImageView
            style="@style/ImageView.GuillotineItem"
            android:src="@drawable/ic_settings" />

        <com.se.project.plugin.CanaroTextView
            style="@style/TextView.GuillotineItem"
            android:text="Add Folder" />
    </LinearLayout>

    
     <LinearLayout
        android:id="@+id/student_group"
        style="@style/LinearLayout.GuillotineItem">

        <ImageView
            style="@style/ImageView.GuillotineItem"
            android:src="@drawable/ic_feed" />

        <com.se.project.plugin.CanaroTextView
            style="@style/TextView.GuillotineItem"
            android:text="Students" />
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/logout_group"
        style="@style/LinearLayout.GuillotineItem">

        <ImageView
            style="@style/ImageView.GuillotineItem"
            android:src="@drawable/ic_settings" />

        <com.se.project.plugin.CanaroTextView
            style="@style/TextView.GuillotineItem"
            android:text="Logout" />
    </LinearLayout>
    
    
    
</LinearLayout>